
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form method="post" action="~/Home/Edit">
        <div class="row">
            <div class="col-lg-12">
                <input type="hidden" name="Id" value="@ViewBag.Emp.Id"/>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" value="@ViewBag.Emp.Name" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="Email" value="@ViewBag.Emp.Email" />
                </div>
                <div class="form-group">
                    <label>Mobile</label>
                    <input type="text" name="Mobile" value="@ViewBag.Emp.Mobile"/>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input type="text" name="City" value="@ViewBag.Emp.City"/>
                </div>
            </div>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>

